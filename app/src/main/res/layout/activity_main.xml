<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.luisaamariles.chefburgerapp.MainActivity">


     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="@drawable/portada">

     <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="@string/portada"
        android:id="@+id/Portada"
        android:gravity="center"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        />
       </LinearLayout>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/Menu"
        android:id="@+id/Menu"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:background="@color/gray"
        />
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">
     <LinearLayout
        android:layout_width="125dp"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:background="@drawable/hamburgesa">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/Hamburguesa"
            android:text="@string/Hamburguesa"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            />
     </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/papas">
            <TextView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/Papas"
                android:text="@string/Papas"
                android:gravity="center"
                android:textSize="19sp"
                android:textStyle="bold|italic"
                android:textColor="@color/white"
                />
        </LinearLayout>

     <LinearLayout
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@drawable/brownie">
        <TextView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/Brownie"
            android:text="@string/Brownie"
            android:gravity="center"
            android:textSize="19sp"
            android:textStyle="bold|italic"
            android:textColor="@color/white"
            />
     </LinearLayout>
        </LinearLayout>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="@string/Ubicacion"
        android:id="@+id/Ubicacion"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:textColor="@color/white"
        android:background="@color/gray"
        />
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/ubicacion"/>

</LinearLayout>